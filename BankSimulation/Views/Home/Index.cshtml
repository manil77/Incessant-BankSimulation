@model IEnumerable<BankSimulation.Models.ViewModel.TransactionSummary>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Your current balance is @ViewBag.CurrentBalance </h1>
</div>


<div class="container mt-5">
    @if (Model.Count() > 0)
    {
        <a asp-action="ExcelExport" class="btn btn-primary" style="background-color: green;">Excel Export</a>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quarters</th>
                    <th>Transaction</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Quarter</td>
                        <td>@item.TransactionType.ToUpper()</td>
                        <td>@item.Amount</td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {

        <h3 class="text-center">No data found!</h3>
    }
</div>

