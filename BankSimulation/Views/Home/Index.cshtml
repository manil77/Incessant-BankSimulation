@model IEnumerable<BankSimulation.Models.ViewModel.TransactionSummary>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Your current balance is @ViewBag.CurrentBalance </h1>
</div>


<div class="container mt-5">
    <a asp-action="ExcelExport" class="btn btn-primary" style="background-color: green;">Excel Export</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Quarters</th>
                <th>Transaction</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Quarter</td>
                        <td>@item.TransactionType.ToUpper()</td>
                        <td>@item.Amount</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

